// schema.prisma

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  clerkId  String @unique
  email    String
  stocks   Stock[]
}

model Stock {
  id                    String  @id @default(auto()) @map("_id") @db.ObjectId
  symbol                String
  userId                String  @db.ObjectId
  user                  User    @relation(fields: [userId], references: [id])
  companyName           String
  ticker                String
  logoUrl               String
  marketCap             Float
  priceTarget           Float
  shortInterestPercentage Float?
  stockPrice            Float
  stockPriceChange      Float
  moneyVolume           Float
}
